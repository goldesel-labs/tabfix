{
  "manifest_version": 3,
  "name": "Tabfix — Digitaler Arbeitsplatz-Manager",
  "version": "1.0.0",
  "description": "Speichere Tab-Sessions, stelle sie wieder her, schließe inaktive Tabs, Focus-Mode, Notizen je Tab und Duplikat-Cleaner.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tabfix öffnen"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "scripting",
    "activeTab",
    "contextMenus",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "save_session_quick": {
      "suggested_key": { "default": "Ctrl+Shift+S", "mac": "Command+Shift+S" },
      "description": "Aktuelle Tabs als 'Schnellspeicher'-Session sichern"
    },
    "restore_last_session": {
      "suggested_key": { "default": "Ctrl+Shift+R", "mac": "Command+Shift+R" },
      "description": "Letzte Session wiederherstellen"
    },
    "toggle_focus_mode": {
      "suggested_key": { "default": "Ctrl+Shift+F", "mac": "Command+Shift+F" },
      "description": "Focus-Mode umschalten"
    }
  }
}
